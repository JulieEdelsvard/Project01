<h1>Log in</h1>

<h2><%= flash[:error] %></h2>

  <div class="container">
    <div id="column1">

  <%= form_tag login_path do %>

  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="checkbox">
      <label><input type="checkbox"> Remember me</label>
  </div>

  <div class="form-group">
    <%= submit_tag "Log in" %>
  </div>

  <% end %>
  </div>
</div>
